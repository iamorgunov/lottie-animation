{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "es5",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "jsx": "react",
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"],
    "typeRoots": [
      "./node_modules/@types"
    ],
  }
  